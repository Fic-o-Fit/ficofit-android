<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main Color -->
    <color name="baseColor">#FFFFFF</color>
    <color name="primaryColor">#551FFF</color>
    <color name="secondaryColor">#00B7FE</color>
    <color name="accentColor">#FF6A00</color>

    <!-- Shades of Grey Color -->
    <color name="darkGrey">#92959E</color>
    <color name="midGrey">#D0D2DA</color>
    <color name="lightGrey">#F5F5F7</color>

    <!-- Base application theme. -->
    <style name="Theme.FicOFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/lightGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/baseColor</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="TextStyle.AppName">
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextStyle.Title.Regular">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="TextStyle.SubTitle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextStyle.SubTitle.Regular">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="TextStyle.Content">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextStyle.Content.Regular">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="Theme.FicOFit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FicOFit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FicOFit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>