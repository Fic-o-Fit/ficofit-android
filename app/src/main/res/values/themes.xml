<resources>

    <!-- Main Color -->
    <color name="baseColor">#FFFFFF</color>
    <color name="primaryColor">#173033</color>
    <color name="secondaryColor">#B9E4EF</color>
    <color name="accentColor">#F1654F</color>

    <!-- Shades of Grey Color -->
    <color name="darkGrey">#92959E</color>
    <color name="midGrey">#D0D2DA</color>
    <color name="lightGrey">#F5F5F7</color>

    <color name="transparant">#6691C1F4</color>

    <!-- Base application theme. -->
    <style name="Theme.FicOFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/lightGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/baseColor</item>

        <!-- Bottom Sheet -->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>

    <!-- Splash Screen -->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_medal</item>
    </style>

    <!-- Bottom Sheet Dialog Theme -->
    <style name="BottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="TextStyle.AppName">
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextStyle.Title.Regular">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="TextStyle.SubTitle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextStyle.SubTitle.Regular">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="TextStyle.Content">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextStyle.Content.Regular">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="TextStyle.ToolbarTitlePrimary">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.FicOFit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FicOFit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FicOFit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.ToolbarTitlePrimary">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Streak">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Streak.Counter">
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="Text.Streak.Counter.Number">
        <item name="android:textSize">58sp</item>
    </style>

    <style name="Text.Streak.Counter.Suffix">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Text.Card">
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="Text.Card.Number">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Text.Card.Suffix">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Text.Card.Description">
        <item name="fontFamily">?attr/fontFamily</item>
    </style>

    <style name="Layout">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
    </style>
</resources>