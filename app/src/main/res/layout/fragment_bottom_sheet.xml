<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="16dp"
    android:paddingBottom="32dp"
    tools:context=".ui.home.bottomsheetdialog.BottomSheet">

    <View
        android:id="@+id/view_top"
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:background="@drawable/bg_capsul"
        android:backgroundTint="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fun_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/fun_games"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ic_temple_run"
        app:layout_constraintStart_toStartOf="@+id/ic_temple_run"
        app:layout_constraintTop_toBottomOf="@+id/view_top" />

    <ImageView
        android:id="@+id/ic_temple_run"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_ilustration_onboarding_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fun_game" />

    <View
        android:id="@+id/view_wraper"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_capsul"
        android:backgroundTint="@color/midGrey"
        app:layout_constraintBottom_toBottomOf="@id/ic_temple_run"
        app:layout_constraintEnd_toStartOf="@+id/ic_sit_up"
        app:layout_constraintStart_toEndOf="@+id/ic_temple_run"
        app:layout_constraintTop_toTopOf="@+id/ic_temple_run" />

    <TextView
        android:id="@+id/tv_calisthenics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/calisthenic"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ic_push_up"
        app:layout_constraintStart_toEndOf="@+id/view_wraper"
        app:layout_constraintTop_toBottomOf="@+id/view_top" />

    <ImageView
        android:id="@+id/ic_sit_up"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_ilustration_onboarding_2"
        app:layout_constraintEnd_toStartOf="@+id/ic_push_up"
        app:layout_constraintStart_toEndOf="@+id/ic_temple_run"
        app:layout_constraintTop_toBottomOf="@+id/tv_calisthenics" />

    <ImageView
        android:id="@+id/ic_push_up"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_ilustration_onboarding_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_calisthenics" />


</androidx.constraintlayout.widget.ConstraintLayout>